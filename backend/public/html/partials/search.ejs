<main id="main">
  <style>
    .search-container {
      display: flex;
      justify-content: center;
      margin-top: 20px;
      min-height: 50vh;
    }

    .search-form {
      display: flex;
      flex-direction: column;
      align-items: center;
      gap: 10px;
    }

    .search-title {
      margin-bottom: 10px;
      text-align: center;
    }

    .input-row {
      display: flex;
      justify-content: center;
      gap: 10px;
      flex-wrap: wrap;
    }

    .search-input {
      padding: 10px;
      font-size: 16px;
      flex: 1;
    }

    .search-type {
      padding: 10px;
      font-size: 16px;
      border-radius: 5px;
    }

    .price-input {
      padding: 10px;
      font-size: 16px;
      width: 120px;
      border-radius: 5px;
    }

    .search-button {
      padding: 10px 20px;
      font-size: 16px;
      cursor: pointer;
    }
  </style>
  <section class="inner-page">
    <div class="search-container">
      <form action="/search-results" method="get" class="search-form">
        <h3 class="search-title">Search for book by title, author, or ISBN</h3>
        <div class="input-row">
          <input name="minPrice" type="number" step="0.01" placeholder="Min Price" class="price-input">
          <input name="maxPrice" type="number" step="0.01" placeholder="Max Price" class="price-input">
        </div>
        <div class="input-row">
          <input name="term" type="text" placeholder="Search for a book..." class="search-input">
          <select name="searchType" class="search-type">
            <option value="title">Title</option>
            <option value="author">Author</option>
            <option value="isbn">ISBN</option>
          </select>
          <button type="submit" class="search-button">Search</button>
        </div>
      </form>
    </div>
  </section>
</main>
