    <style>
    .this-container {
      margin: 100px auto; /* Centers the container and adds margin to push it down */
      padding: 20px;
      background: #fff;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
      border-radius: 8px;
      width: 80%;
      max-width: 600px;
    }
    .cart-items ul {
      list-style-type: none;
      padding: 0;
    }
    .cart-items li {
      background: #f9f9f9;
      padding: 10px;
      margin-bottom: 10px;
      border-radius: 4px;
    }
    .cart-items li h2, .cart-items li p {
      margin: 0;
    }
  </style>

</head>

<body>

    <div class="this-container">
    <h1>Order Details</h1>
    <div class="order-details">
      <p><strong>Paypal Order ID:</strong> <%= orderInfo.paypalTransactionId %></p>
      <p><strong>Total Cost:</strong> $<%= orderInfo.total %></p>
    </div>
    <div class="cart-items">
      <h2>Cart Items</h2>
      <ul>
        <% cartData.forEach(item => { %>
          <li>
            <h2><%= item.title %></h2>
            <p><strong>Author:</strong> <%= item.author %></p>
            <p><strong>Price:</strong> $<%= item.price %></p>
            <p><strong>Quantity:</strong> <%= item.quantity %></p>
            <p><strong>ISBN:</strong> <%= item.isbn %></p>
          </li>
        <% }); %>
      </ul>
    </div>

